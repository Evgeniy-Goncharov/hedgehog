mixin order()
  -
    const checkList = [
      {
        text: "хочу ёжика для себя",
        name: "self",
        checked: true
      },
      {
        text: "хочу ёжика для детей",
        name: "kind",
      },
      {
        text: "хочу ёжика для разведения",
        name: "breeding",
      },
    ]

    const countList = [
      {
        text: "Мне нужен 1-2 ёжика",
        value: "1-2",
        checked: true
      },
      {
        text: "Мне нужны 3 и более ёжиков",
      },
      {
        text: "Мне нужны 3-4 ёжика",
        value: "3-4",
      },
      {
        text: "Пока присматриваюсь",
        value: "?",
      },
    ]

    const contactsList = [
      {
        name: "name",
        type: "text",
        placeholder: "Ваше имя",
      },
      {
        name: "phone",
        type: "tel",
        placeholder: "Ваш телефон",
      },
      {
        name: "email",
        type: "email",
        placeholder: "Ваш e-mail",
      },
    ]

  section.order
    .container
      form(method="POST" action="https://echo.htmlacademy.ru")
        h2.order__title Заполните заявку и мы забронируем для Вас нового друга

        .order__menu
          fieldset.order__left-column
            legend.visually-hidden Какого ежика вы хотите?
            each item in checkList
              +custom-input({inputType: "checkbox", inputLabel: item.text, inputName: item.name, isChecked: item.checked})

          fieldset.order__right-column
            legend.visually-hidden Сколько ежиков вы хотите?
            each item in countList
              +custom-input({inputType: "radio", inputLabel: item.text, inputName: "count", inputValue: item.value, isChecked: item.checked})

        fieldset.order__row
          legend.visually-hidden Заполните ваши контактные данные
          each item in contactsList
            +custom-input({inputType: item.type, inputName: item.name, inputPlaceholder: item.placeholder})

        +custom-textarea({inputPlaceholder: "Комментарий к заявке"})

        +btn({tag: "button", type: "button", text: "Купить ежика"}).order__submit-button

      p.order__balance
        svg(width="41" height="41")
          use(xlink:href="img/sprite_auto.svg#hedgehog_green")
        span У нас осталось еще: <span class="underline">25 ёжиков</span>
      p
        small Торопитесь! Акция действует до 26.02.2023


